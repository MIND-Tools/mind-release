<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
        <format>tar.bz2</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/bin-assemblies/mindc-${mindc.version}</directory>
            <filtered>false</filtered>
            <outputDirectory></outputDirectory>
            <includes>
                <include>bin/**/*</include>
                <include>examples/**/*</include>
                <include>lib/**/*</include>
                <include>runtime/**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/bin-assemblies/mindoc-${mindoc.version}</directory>
            <filtered>false</filtered>
            <outputDirectory></outputDirectory>
            <includes>
                <include>bin/**/*</include>
                <include>lib/**/*</include>
                <include>resources/**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/runtime-doc</directory>
            <filtered>false</filtered>
            <outputDirectory>docs/runtime</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/bin-assemblies/mind-test-${mind-test.version}</directory>
            <filtered>false</filtered>
            <outputDirectory></outputDirectory>
            <includes>
                <include>bin/**/*</include>
                <include>lib/**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/runtime-doc</directory>
            <filtered>false</filtered>
            <outputDirectory>docs/runtime</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/assemble/resources/README.txt</source>
            <fileMode>0644</fileMode>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/assemble/resources/docs/README.txt</source>
            <fileMode>0644</fileMode>
            <outputDirectory>docs</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.build.directory}/src-assemblies/mindc-${mindc.version}/target/site/mindc-user-guide.pdf</source>
            <fileMode>0644</fileMode>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/src-assemblies/mind-test-${mind-test.version}/target/site/mindtest-user-guide.pdf</source>
            <fileMode>0644</fileMode>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>LICENSES.txt</source>
            <fileMode>0644</fileMode>
            <outputDirectory></outputDirectory>
        </file>
    </files>
</assembly>